<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:cxf="http://camel.apache.org/schema/cxf"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd          
		http://camel.apache.org/schema/spring 
		http://camel.apache.org/schema/spring/camel-spring.xsd
		http://camel.apache.org/schema/cxf 
		http://camel.apache.org/schema/cxf/camel-cxf.xsd
		http://cxf.apache.org/jaxrs 
		http://cxf.apache.org/schemas/jaxrs.xsd">
    
        
    
    <bean id="RestletComponent" class="org.restlet.Component" />
    <bean id="RestletComponentService" class="org.apache.camel.component.restlet.RestletComponent">
    <constructor-arg index="0">
    <ref bean="RestletComponent"/>
  </constructor-arg>
</bean>
    <bean id="processor" class="com.reactive.Process"></bean>
     <camel:camelContext id="camelId" >
       
		<camel:route>
			<camel:from uri="restlet:http://localhost:7070/camelRest/demo/{id}?restletMethod=get"/>
			<camel:process ref="processor" />
			<camel:to uri="class:com.reactive.Welcome?method=getWlc"></camel:to>
		</camel:route>
	</camel:camelContext>
</beans>